<h1><%= @routine.name.capitalize %> Workout</h1>
<p>TARGET: <%=@routine.muscles%></p>
<%@routine.exercises.each do |exercise| %>
<h2><%=link_to exercise.name.pluralize.capitalize, exercise_path(exercise)%></h2>
  <ul>
    <li>Reps: <%=exercise.reps%></li>
    <li>Instructions: <%=exercise.instructions%></li>
    <li>Estimated Time: <%=exercise.show_estimated_time%></li>
    <li>Target Muscles: <%=exercise.muscles%></li>
  </ul>
<%end%>
<p>Total Estimated Workout Time: <%=@routine.show_estimated_time%></p>


